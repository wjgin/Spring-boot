<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>ajax test to vanila js</title>
</head>
<body>
	<h3>hi</h3>
	<p id="target">원래의 문장</p>
	<button id="ajaxTest" value="버튼">버튼이올시</button>
</body>
<script defer>

	document.querySelector('#ajaxTest').addEventListener('click', function(event){
		var xhr = new XMLHttpRequest();
		xhr.open('POST', '/test');
		xhr.onreadystatechange = function(){
			console.log('xhr.readyStatus' + xhr.readyStatus);
			console.log('xhr.status' + xhr.state);
			console.log('xhr.responseText' + xhr.responseText);
			console.log(xhr);
			if(xhr.readyState == 4 && xhr.status == 200) {	// 모든 통신이 끝남(4), 정상일 때(200)
				document.querySelector('#target').innnerHTML = xhr.responseText;	// 동작 
			}
		}
		xhr.send();	
	});
</script>
</html>