<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>ajax test to vanila js</title>
</head>
<body>
	<h3>hi</h3>
	<p id="target">원래의 문장</p>
	<button id="ajaxTest" value="버튼">버튼이올시</button>
</body>
<script defer>

	document.querySelector('#ajaxTest').addEventListener('click', function(event){
		var xhr = new XMLHttpRequest();
		xhr.open('POST', '/test');
		xhr.onreadystatechange = function(){
			if(xhr.readyState == 4 && xhr.status == 200) {
				document.querySelector('#target').innnerHTML = xhr.responseText;
			} else {
				console.log("비정상 통신 ")
				// document.querySelector('#target').innnerHTML = xhr.responseText;
				// console.log(xhr);
				console.log("xhr.responseText = " + xhr.responseText);
			}
		}
		xhr.send();
	});
</script>
</html>