<script>
	function ajax() {
		var xhr = new XMLHttpRequest();

		xhr.onreadystatechange = function() {
			if (xhr.readyState === 4) {
				if (xhr.status === 200) {
					let target = document.getElementBy("target");
					target.innerHTML = response;
					console.log("작업내용 작성");
				}
			}
		};

		xhr.open("post", "/test", true);
		xhr.setRequestHeader("Content-Type",
				"application/x-www-form-urlencoded");
		xhr.send(null);
	}
	
	document.getElementById("ajaxTest").addEventListener('click', ajax());
</script>
